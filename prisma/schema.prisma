// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                  String   @id @default(cuid())
  name                String
  description         String
  price               Int
  reviews             String
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

// Hotels and Rooms information
model Hotels {//Already
  id                  String   @id @default(cuid())
  HotelName           String
  Website             String
  location            String
  category            String 
  loc_Lat             String
  loc_Lng             String
  loc_Place           String
  loc_City            String
  loc_State           String
  loc_Country         String
  FrontImg            String 
  Gallery             String 
  PhoneNumber         String
  CountryCode         String
  Email               String
  HotelDescription    String
  StarRating          Float
  ReviewNumber        Int
  Tags                String
  SpecialTags         String 
  PopularityNumber    Int
  DateAdded           DateTime
  TrendingNumber      Int
  SN_Facebook         String
  SN_Twitter          String
  SN_Instagram        String
  SN_Pinterest        String
  Reviews             String
  Policies            String
  Rooms               String
}

model Tags { //Already
  id                  String   @id @default(cuid())
  name                String
}

model Reviews { //Already
  id                  String   @id @default(cuid())
  rating              Int
  user                String
  date                DateTime
  hotelReview         String
}

model Policies { //Already
  id                  String   @id @default(cuid())
  name                String
}

model Rooms { //Already
  id                          String    @id @default(cuid())
  Available                   Boolean
  RoomImg                     String
  RoomName                    String
  OriginalPricePerNight       Int
  Discount                    Int
  About                       String
  Facility                    String
}

model Amenities { //Already
  id          String   @id @default(cuid())
  name        String //Bed, Instalations, etc.
}

model Inclusions { //Already
  id            String   @id @default(cuid())
  name          String
  // Inclusion List
}

// Customers, Users and Administrator Information
model customer{ //Already
  id               String   @id @default(cuid())
  firstName        String
  lastName         String
  gender           String
  streetAddress    String
  city             String
  state            String
  zipCode          String
  email            String   @unique
  phoneNumber      String
  password         String
  bookings         String // Bookings list
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Payments { //Already
  id                String   @id @default(cuid())
  CardFirstName     String
  CardSecondName    String
  CardBankEntity    String
  CardNumber        String
  CardType          String
  CardYear          String
  CardMonth         String
  CardCcv           String
  Status            String // Validate type
}

model Bookings {
  id                  String   @id @default(cuid())
  HotelName           String
  RoomType            String
  DateOfStay          DateTime
  NumberOfGuest       String
}

