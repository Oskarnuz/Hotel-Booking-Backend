// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                  String   @id @default(cuid())
  name                String
  description         String
  price               Int
  reviews             String
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

// Hotels and Rooms information
model Hotels {
  HotelId             String   @id @default(cuid())
  HotelName           String
  Website             String
  location            String
  category            String //Review later
  loc_Lat             String
  loc_Lng             String
  loc_Place           String
  loc_City            String
  loc_State           String
  loc_Country         String
  FrontImg            String //image
  Gallery             String //galery image
  PhoneNumber         String
  CountryCode         String
  Email               String
  HotelDescription    String
  StarRating          Float
  ReviewNumber        Int//String
  Tags                String // ["Bar", "breakfast"],
  SpecialTags         String // "Recommended",
  PopularityNumber    Int
  DateAdded           DateTime
  TrendingNumber      Int
  SN_Facebook         String
  SN_Twitter          String
  SN_Instagram        String
  SN_Pinterest        String
  Reviews             String
  Policies            String
  Rooms               String
}

model Tags {
  id                  String   @id @default(cuid())
  name                String
}

model Review {
  id                  String   @id @default(cuid())
  Rating              Decimal
  User                String
  Date                DateTime
  HotelReview         String
}

model Policies {
  id                  String   @id @default(cuid())
  policy1             String
  policy2             String
}

model Rooms {
  room_id                     String    @id @default(cuid())
  Available                   Boolean
  RoomImg                     String
  RoomName                    String
  Amenities                   String // Aminities list
  Inclusions                  String // inclusions list
  OriginalPricePerNight       Int
  Discount                    Int
  About                       String
  Facility                    String
}

model Amenities {
  id          String   @id @default(cuid())
  name        String //Bed, Instalations, etc.
}

model Inclusions {
  id            String   @id @default(cuid())
  name          String
  // Inclusion List
}

// Customers, Users and Administrator Information
model customer{
  id               String   @id @default(cuid())
  firstName        String
  lastName         String
  gender           String
  streetAddress    String
  city             String
  state            String
  zipCode          String
  email            String
  phoneNumber      String
  password         String
  bookings         String // Bookings list
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Payments {
  PaymentsId                  String   @id @default(cuid())
  CardFirstName     String
  CardSecondName    String
  CardBankEntity    String
  CardNumber        String
  CardType          String
  CardYear          String
  CardMonth         String
  CardCcv           String
  Status            String // Validate type
}

model Booking {
  BookingId           String   @id @default(cuid())
  HotelName           String
  RoomType            String
  DateOfStay          DateTime
  NumberOfGuest       String
}

